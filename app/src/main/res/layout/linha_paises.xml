<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bandeira"
        android:layout_width="@dimen/size_flag"
        android:layout_height="@dimen/size_flag"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:id="@+id/txt_nome_pais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/bandeira"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/detalhe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_nome_pais"
        android:layout_toRightOf="@id/bandeira"
        android:layout_alignParentRight="true"/>

</RelativeLayout>